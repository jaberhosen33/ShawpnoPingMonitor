<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShawpnoPingMonitor</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ShawpnoPingMonitor.styles.css" asp-append-version="true" />
</head>
<body>
    <header class=" ">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow ">
            <div class="container-fluid">
                <img style="height:40px; width:40px;" src="~/newfolder/whatsapp image 2025-06-19 at 2.29.21 pm.jpeg" />
                <a class="navbar-brand text-danger fw-bold ms-3 " asp-area="" asp-controller="Home" asp-action="Index">ShawpnoPingMonitor</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-info">Hello, @User.Identity.Name</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Account/Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Account/Login">Login</a>
                            </li>

                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    @if (User.IsInRole("Admin"))
    {
        <div class="row">
            <div class="col-md-2  " style="height:800px;  background-color:#f2f4f4 ;">

                <ul class="navbar-nav me-auto ms-5">
                    <li class="nav-item">
                        <a class="nav-link" href="/Product/Index">Products</a>
                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Product/Create">Add Product</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/UserList">UserList</a>
                        </li>
                    }


                </ul>
            </div>
            <div class="col-md-9">
                <div class="container mt-4">
                    @RenderBody()
                </div>
            </div>
        </div>
    }
    <div class="container mt-4">
        @RenderBody()
    </div>


    <footer class="border-top footer text-muted">
        <div class="container text-danger text-center">
            &copy; 2025 - ShawpnoPingMonitor -
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
